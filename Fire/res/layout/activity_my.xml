<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zgkxzx.activity.MyActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/sys_name"
        android:textColor="@color/white"
        android:textSize="40px" />
    
    
    <GridView
		android:id="@+id/menuGridView"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:numColumns="6"
		android:horizontalSpacing="10px"
		android:verticalSpacing="10px"
		android:layout_marginTop="300px"
		android:layout_marginBottom="58px"
		android:layout_marginLeft="5px"
		android:layout_marginRight="5px"/>
    <!-- android:listSelector="@drawable/choose_gridview" -->
   <!--  android:background="@drawable/title_bg"-->
   
    
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="550px"
        android:adjustViewBounds="true"
        android:maxHeight="60px"
        android:src="@drawable/logo2" /> 

</RelativeLayout>